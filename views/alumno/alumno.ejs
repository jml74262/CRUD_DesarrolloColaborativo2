<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" integrity="sha384-nU14brUcp6StFntEOOEBvcJm4huWjB0OcIeQ3fltAfSmuZFrkAif0T+UtNGlKKQv" crossorigin="anonymous">
    <!-- iconos -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    
    <nav class="navbar bg-dark navbar-dark navbar-expand-lg">
      <div class="container-fluid">
        <button class="btn btn-dark" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
          <i class='bx bxs-user bx-md'></i>
        </button>
    
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
    
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">Inicio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/materia">Materias</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/alumno">Alumnos</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    
    <!-- Offcanvas -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasExampleLabel">Usuario</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body" style="display: grid; grid-template-rows: 1fr auto;">
        <div class="profile text-center">
          <img src="https://i.imgur.com/6VBx3io.png" class="rounded-circle" alt="image">
          <h4 class="name">Nombre</h4>
          <p class="title">Rol</p>
        </div>
        <div>
          <button class="btn btn-danger">Cerrar Sesi√≥n</button>
        </div>
      </div>
    </div>
    
  </head>
  <body>
    <div class="container">
      <h2>Alumnos</h2>
        <a href="/create_alumno" class="btn btn-outline-dark mt-2"><i class='bx bx-message-square-add'></i></a>
        
        <% user.forEach((user) => { %>
            <div class="card mb-3" style="margin-top: 15px;">
                <div class="row g-0">
                    <div class="col-md-8">
                        <div class="card-body">
                            <p style="display: none;"><%= user.id %></p>
                            <h5 class="card-title"><%= user.name %></h5>
                            <p class="card-text"><%= user.role %></p>
                        </div>
                    </div>
                    <div class="col-md-4 d-flex justify-content-center align-items-center">
                        <!-- boton para editar registro de usuario -->
                        <a href="edit_alumno/<%= user.id %>" class="btn btn-dark" style="margin-right: 10px;"><i class='bx bx-edit'></i></a>
                        <!-- boton para eliminar registro de usuario -->
                        <a href="delete_alumno/<%= user.id %>" class="btn btn-dark"><i class='bx bx-trash'></i></a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>